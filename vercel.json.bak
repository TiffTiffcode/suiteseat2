{
  "cleanUrls": true,
  "rewrites": [
    { "source": "/signup",       "destination": "https://YOUR_API_HOST/signup" },
    { "source": "/signup/pro",   "destination": "https://YOUR_API_HOST/signup/pro" },
    { "source": "/login",        "destination": "https://YOUR_API_HOST/login" },
    { "source": "/auth/(.*)",    "destination": "https://YOUR_API_HOST/auth/$1" },
    { "source": "/api/(.*)",     "destination": "https://YOUR_API_HOST/api/$1" }
  ]
}
